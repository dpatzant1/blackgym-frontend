<!-- Scroll to Top Button -->
<button 
  id="scrollToTop"
  class="fixed bottom-6 right-6 w-12 h-12 bg-green-500 hover:bg-green-400 text-black rounded-full shadow-lg hover:shadow-xl transition-all duration-300 opacity-0 invisible"
  title="Volver arriba"
>
