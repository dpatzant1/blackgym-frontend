</head>
<body class="font-roboto bg-primary-black text-text-light overflow-x-hidden">
    <slot />
    
    <!-- Cart Slide Over - Global -->
    <CartSlideOver client:load />
    
    <!-- Toast Notifications Provider -->
    <ToastProvider client:load />
</body>
</html>
