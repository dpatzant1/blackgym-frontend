    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="BLACK GYM - Implementos de Gimnasio y Suplementación Deportiva">
    <meta name="twitter:description" content="Especialistas en equipos de gimnasio profesionales y suplementación deportiva en San Martín Jilotepeque, Chimaltenango.">
