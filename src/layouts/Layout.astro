    <link rel="preload" href="/logo-principal-optimizado.webp" as="image">
    
    <!-- DNS Prefetch for performance -->
    <link rel="dns-prefetch" href="//fonts.googleapis.com">
    <link rel="dns-prefetch" href="//fonts.gstatic.com">
    <link rel="dns-prefetch" href="//cdnjs.cloudflare.com">
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png">
    
    <!-- Open Graph Tags -->
    <meta property="og:type" content="business.business">
    <meta property="og:title" content="BLACK GYM - Implementos de Gimnasio y Suplementación Deportiva">
    <meta property="og:description" content="Especialistas en equipos de gimnasio profesionales, suplementación deportiva y planes de membresía flexibles en San Martín Jilotepeque, Chimaltenango. ¡Sin dolor, no hay progreso!">
    <meta property="og:url" content="https://blackgym.gt">
    <meta property="og:site_name" content="BLACK GYM">
    <meta property="og:image" content="https://blackgym.gt/logo-principal-optimizado.webp">
