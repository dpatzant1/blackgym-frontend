---
import CartSlideOver from '../components/react/CartSlideOver';
import ToastProvider from '../components/react/ToastProvider';

export interface Props {
  title: string;
  description?: string;
  keywords?: string;
}

const { 
  title = "BLACK GYM - Implementos de Gimnasio y Suplementación Deportiva | San Martín Jilotepeque", 
  description = "BLACK GYM - Tu destino para equipos de gimnasio profesionales y suplementación deportiva de alta calidad en San Martín Jilotepeque, Chimaltenango. Equipos de fuerza, cardiovasculares, proteínas, accesorios y planes de membresía flexibles.",
  keywords = "gimnasio, equipos de gimnasio, suplementos deportivos, proteínas, mancuernas, San Martín Jilotepeque, Chimaltenango, Guatemala, fitness, entrenamiento, black gym, planes de gimnasio, membresía gym, precios gimnasio"
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    
    <!-- Preload Critical Resources -->
    <link rel="preload" href="/principal-desplazamiento-1-optimizado.webp" as="image" media="(min-width: 768px)">
    <link rel="preload" href="/logo-principal-optimizado.webp" as="image">
    
    <!-- DNS Prefetch for performance -->
    <link rel="dns-prefetch" href="//fonts.googleapis.com">
    <link rel="dns-prefetch" href="//cdnjs.cloudflare.com">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer">
    
    <!-- Meta Tags SEO -->
    <meta name="description" content={description}>
    <meta name="keywords" content={keywords}>
    <meta name="author" content="BLACK GYM">
    <meta name="robots" content="index, follow">
    <meta name="language" content="Spanish">
    <meta name="geo.region" content="GT-CQ">
    <meta name="geo.placename" content="San Martín Jilotepeque, Chimaltenango">
    <meta name="geo.position" content="14.7069;-90.8186">
